# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# home page
GET        /                               controllers.MainController.index
GET        /*path/                         controllers.MainController.untrail(path: String)

# Routes for querying Lucene Index
# FIXME SR is there a way to get Option[String] for the URL path binder?
GET        /query                          controllers.QueryController.query(query: Option[String],bbox: Option[String], fromDate: Option[String], toDate: Option[String])
GET        /cswi-api/query                 controllers.QueryController.query(query: Option[String],bbox: Option[String], fromDate: Option[String], toDate: Option[String])
#GET        /bbox/:bbox                     controllers.QueryController.query(query = "", bbox: String, fromDate = "", toDate = "")
#GET        /query/:query                   controllers.QueryController.query(query: String, bbox = "", fromDate = "", toDate = "")
#GET        /query/:query/bbox/:bbox        controllers.QueryController.query(query: String, bbox: String, fromDate = "", toDate = "")

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)
